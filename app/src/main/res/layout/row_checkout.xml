<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="checkoutRowModel" type="com.codewaresapplication.app.modules.checkout.data.model.CheckoutRowModel"/>
    </data>
    <LinearLayout android:id="@+id/linearRowmegaphone1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal" style="@style/groupStylegray_102cornerRadius">
        <LinearLayout android:id="@+id/linearRowmegaphone2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" android:orientation="horizontal">
            <ImageView android:id="@+id/imageMegaphone"
                android:layout_height="@dimen/_24pxh"
                android:layout_width="@dimen/_20pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_megaphone"
                tools:ignore="ContentDescription" tools:src="@drawable/img_megaphone"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtPaypal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{checkoutRowModel.txtPaypal}"
                style="@style/txtPoppinsregular16" tools:text="@string/lbl_paypal"/>
        </LinearLayout>
        <RadioButton android:buttonTint="@color/gray_500"
            android:ellipsize="end" android:id="@+id/rbGroup489"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" android:singleLine="true"/>
    </LinearLayout>
</layout>
