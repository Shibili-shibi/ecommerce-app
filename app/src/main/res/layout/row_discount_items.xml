<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="discountItemsRowModel" type="com.codewaresapplication.app.modules.discountitems.data.model.DiscountItemsRowModel"/>
    </data>
    <LinearLayout android:id="@+id/linearRowarrowright"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal" style="@style/groupStylegray_102cornerRadius">
        <LinearLayout android:id="@+id/linearRowunsplashqnuur"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" android:orientation="horizontal">
            <ImageView android:id="@+id/imageUnsplashqnUUR"
                android:layout_height="@dimen/_58pxh"
                android:layout_width="@dimen/_58pxh"
                android:scaleType="fitXY"
                cornerRadius="@{@dimen/_10pxh}"
                imageRes="@{@drawable/img_unsplashqnuur_4}"
                tools:ignore="ContentDescription" tools:src="@drawable/img_unsplashqnuur_4"/>
            <LinearLayout android:gravity="start"
                android:id="@+id/linearColumnoffer"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="vertical">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtOffer"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:lineSpacingExtra="@dimen/_1pxh"
                    android:singleLine="true"
                    android:text="@{discountItemsRowModel.txtOffer}"
                    style="@style/txtPoppinsregular15" tools:text="@string/lbl_20_discount"/>
                <androidx.appcompat.widget.AppCompatRatingBar
                    android:id="@+id/ratingBarRatingbar"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:numStars="5"
                    android:progressTint="@color/amber_400"
                    android:rating="5" style="@style/Widget.AppCompat.RatingBar.Small"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView android:id="@+id/imageArrowright"
            android:layout_height="@dimen/_16pxh"
            android:layout_width="@dimen/_16pxh"
            android:scaleType="fitXY"
            android:src="@drawable/img_arrowright_16X16"
            tools:ignore="ContentDescription" tools:src="@drawable/img_arrowright_16X16"/>
    </LinearLayout>
</layout>
