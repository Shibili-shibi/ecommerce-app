<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="listfacebookRowModel" type="com.codewaresapplication.app.modules.socialaccountlink.data.model.ListfacebookRowModel"/>
    </data>
    <LinearLayout android:id="@+id/linearRowlink"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal" style="@style/groupStylegray_102cornerRadius">
        <LinearLayout android:id="@+id/linearRowfacebook"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" android:orientation="horizontal">
            <ImageView android:id="@+id/imageFacebook"
                android:layout_height="@dimen/_40pxh"
                android:layout_width="@dimen/_40pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_facebook"
                tools:ignore="ContentDescription" tools:src="@drawable/img_facebook"/>
            <LinearLayout android:gravity="start"
                android:id="@+id/linearColumnfacebookOne"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="vertical">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtFacebookOne"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:lineSpacingExtra="@dimen/_1pxh"
                    android:singleLine="true"
                    android:text="@{listfacebookRowModel.txtFacebookOne}"
                    style="@style/txtPoppinsregular15" tools:text="@string/lbl_facebook"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtWelcometoFace"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:lineSpacingExtra="@dimen/_1pxh"
                    android:singleLine="true"
                    android:text="@{listfacebookRowModel.txtWelcometoFace}"
                    style="@style/txtPoppinsregular11" tools:text="@string/msg_welcome_to_face"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView android:id="@+id/imageLink"
            android:layout_height="@dimen/_24pxh"
            android:layout_width="@dimen/_24pxh"
            android:scaleType="fitXY" android:src="@drawable/img_link"
            tools:ignore="ContentDescription" tools:src="@drawable/img_link"/>
    </LinearLayout>
</layout>
